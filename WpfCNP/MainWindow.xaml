<Window x:Class="WpfCNP.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfCNP"
        mc:Ignorable="d"
        Title="MainWindow" Height="518" Width="800">
    <Grid Margin="0,0,0,2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="100"/>
            <ColumnDefinition Width="auto" 
                              MinWidth="440"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="75"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <Button
            x:Name="Buton_Detalii"
            Grid.Row="0"
            Grid.Column="2"
            Height="25"
            Margin="10"
            Content="Detalii" 
            Click="Buton_Detalii_Click"/>
        <Button 
            x:Name="Buton_CNP"
            Grid.Row="0"
            Grid.Column="1"
            Height="25"
            Margin="10"
            Content="CNP" 
            Click="Buton_CNP_Click"/>
        <Button
            x:Name="Buton_AddUser" Content="AddUser" Width="74" Margin="17,31,0,20" Grid.Column="2" Grid.Row="1"/>
        <Button
            x:Name="Buton_Cauta" Content="Cauta" Width="74" Height="25" Margin="17,0,0,25" Grid.Column="2" VerticalAlignment="Bottom" Grid.Row="2"/>
        <Button
            x:Name="Buton_Refresh" Content="Refresh" Width="76" Margin="17,38,0,-24" Grid.Column="2" Grid.Row="3"/>
        <TextBox 
            x:Name="textBox_Cauta"
            Grid.Row="0"
            Grid.Column="3"
            Height="25" 
            Margin="10"
            HorizontalContentAlignment="Left"
            VerticalContentAlignment="Center"
            TextWrapping="Wrap" 
            Text="Cauta Aici" />
        <ListBox 
            x:Name="listBox_Users" Grid.Column="3" HorizontalAlignment="Left" Height="152" Margin="161,0,0,0" VerticalAlignment="Top" Width="147" Grid.Row="1" Grid.RowSpan="2"/>
    </Grid>
</Window>